{{#extends 'base'}}

{{#block 'content'}}
<form method="GET">
   {{{form}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>





<table class="table">
    <thead>
    <tr>
        <th>Image</th>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th> 
        <th>Tags</th> 
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{#if this.image_url}}
                    <img src="{{this.image_url}}" class="img-fluid"/>
                {{/if}}
            </td>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
             <td>
                {{this.category.name}}
            </td>
             <td>
                {{#each tags}}
                    {{this.tag.name}}
                {{/each}}
            </td>
             <td>
                {{this.description}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
            <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>    
            <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Edit</a>
            <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        {{/each}} 
        </tr>   
    </tbody>
</table>
{{/block}}

{{/extends}}