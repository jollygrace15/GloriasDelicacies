{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead><tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
        {{##each products}}
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.price}}
            </td>
        {{/each}}    
    </tbody>
</table>
{{/block}}

{{/extends}}